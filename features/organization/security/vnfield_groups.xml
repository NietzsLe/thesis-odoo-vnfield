<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    ==========================================
    VNFIELD - Custom User Groups
    ==========================================
    Purpose:
      Define main user groups used across the VNField addon:
        - Admin (full system privileges via implied system group)
        - Director (contractor-level director)
        - Project Director (project-level director)
        - Bidding Manager (manages bidding processes)
        - Project Manager (manages projects)

    Notes:
      - Regular users should continue to use the built-in `base.group_user`.
      - The Admin group implies `base.group_system` to grant full system privileges.
      - ACLs for models may be granted to these groups later in `ir.model.access.csv` files.
    -->

    <!-- VNField custom module category -->
    <record id="module_category_vnfield" model="ir.module.category">
        <field name="name">VNField</field>
        <field name="sequence">60</field>
    </record>

    <record id="group_vnfield_admin" model="res.groups">
        <field name="name">Site Admin</field>
        <field name="category_id" ref="vnfield.module_category_vnfield" />
        <field name="implied_ids" eval="[(4, ref('base.group_system'))]" />
        <field name="comment">Full administrators for VNField (implies system administrators)</field>
    </record>

    <record id="group_vnfield_director" model="res.groups">
        <field name="name">Site Director</field>
        <field name="category_id" ref="vnfield.module_category_vnfield" />
        <field name="comment">Directors associated with contractors</field>
    </record>

    <record id="group_vnfield_project_director" model="res.groups">
        <field name="name">Site Project Director</field>
        <field name="category_id" ref="vnfield.module_category_vnfield" />
        <field name="comment">Project directors who oversee projects across contractors</field>
    </record>

    <record id="group_vnfield_bidding_manager" model="res.groups">
        <field name="name">Site Bidding Manager</field>
        <field name="category_id" ref="vnfield.module_category_vnfield" />
        <field name="comment">Users managing bidding/tender processes for contractors</field>
    </record>

    <record id="group_vnfield_project_manager" model="res.groups">
        <field name="name">Site Project Manager</field>
        <field name="category_id" ref="vnfield.module_category_vnfield" />
        <field name="comment">Project managers responsible for specific projects</field>
    </record>

    <record id="group_vnfield_team_leader" model="res.groups">
        <field name="name">Site Team Leader</field>
        <field name="category_id" ref="vnfield.module_category_vnfield" />
        <field name="comment">Team leaders who lead teams at contractor sites</field>
    </record>

</odoo>