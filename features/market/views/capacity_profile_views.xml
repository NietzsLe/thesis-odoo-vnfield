    <!-- Kanban View -->
    <record id="view_capacity_profile_kanban" model="ir.ui.view">
        <field name="name">vnfield.market.capacity.profile.kanban</field>
        <field name="model">vnfield.market.capacity.profile</field>
        <field name="arch" type="xml">
            <kanban default_group_by="work_category" class="o_kanban_small_column">
                <field name="id" />
                <field name="title" />
                <field name="contractor_id" />
                <field name="work_category" />
                <field name="experience_years" />
                <field name="team_size" />
                <field name="budget_capacity_min" />
                <field name="budget_capacity_max" />
                <field name="currency_id" />
                <field name="state" />
                <field name="current_workload" />
                <field name="match_count" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                                <div class="row">
                                    <div class="col-8">
                                        <strong>
                                            <field name="title" />
                                        </strong>
                                    </div>
                                    <div class="col-4 text-right">
                                        <span class="badge badge-pill"
                                            t-attf-class="badge-#{record.state.raw_value == 'waiting_match' ? 'success' : (record.state.raw_value == 'matched' ? 'primary' : 'secondary')}">
                                            <field name="state" />
                                        </span>
                                    </div>
                                </div>

                                <div class="row mt-1">
                                    <div class="col-12">
                                        <i class="fa fa-building-o" />
                                        <field name="contractor_id" />
                                    </div>
                                </div>

                                <div class="row mt-1">
                                    <div class="col-12">
                                        <i class="fa fa-wrench" />
                                        <field name="work_category" />
                                    </div>
                                </div>

                                <div class="row mt-1">
                                    <div class="col-6">
                                        <i class="fa fa-clock-o" /> <field name="experience_years" />
                                        nÄƒm </div>
                                    <div class="col-6">
                                        <i class="fa fa-users" /> <field name="team_size" /> people </div>
                                </div>

                                <div class="row mt-1"
                                    t-if="record.budget_capacity_min.raw_value or record.budget_capacity_max.raw_value">
                                    <div class="col-12">
                                        <i class="fa fa-money" />
                                        <t
                                            t-if="record.budget_capacity_min.raw_value and record.budget_capacity_max.raw_value">
                                            <field name="budget_capacity_min" /> - <field
                                                name="budget_capacity_max" />
                                        </t>
                                        <t t-elif="record.budget_capacity_min.raw_value"> From <field
                                                name="budget_capacity_min" />
                                        </t>
                                        <t t-elif="record.budget_capacity_max.raw_value"> Up to <field
                                                name="budget_capacity_max" />
                                        </t>
                                    </div>
                                </div>

                                <div class="row mt-1">
                                    <div class="col-12">
                                        <span class="badge"
                                            t-attf-class="badge-#{record.current_workload.raw_value == 'low' ? 'success' : (record.current_workload.raw_value == 'high' or record.current_workload.raw_value == 'full' ? 'danger' : 'warning')}">
                                            <field name="current_workload" />
                                        </span>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-6">
                                        <span class="badge badge-info">
                                            <i class="fa fa-handshake-o" /> <field name="match_count" />
                                            match </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_capacity_profile_tree" model="ir.ui.view">
        <field name="name">vnfield.market.capacity.profile.tree</field>
        <field name="model">vnfield.market.capacity.profile</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'waiting_match'" decoration-primary="state == 'matched'" decoration-muted="state == 'inactive'">
                <field name="title" />
                <field name="contractor_id" />
                <field name="work_category" />
                <field name="experience_years" />
                <field name="team_size" />
                <field name="budget_capacity_min" />
                <field name="budget_capacity_max" />
                <field name="currency_id" />
                <field name="current_workload" />
                <field name="match_count" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_capacity_profile_form" model="ir.ui.view">
        <field name="name">vnfield.market.capacity.profile.form</field>
        <field name="model">vnfield.market.capacity.profile</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" type="object" string="Activate"
                        invisible="state != 'draft'" class="btn-primary" />
                    <button name="action_find_matches" type="object"
                        string="Find Matching Requirements"
                        invisible="state != 'active'" class="btn-secondary" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_matches"
                            icon="fa-handshake-o">
                            <field string="Matches" name="match_count" widget="statinfo" />
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="title" />
                            <field name="contractor_id" />
                            <field name="work_category" />
                            <field name="experience_years" />
                        </group>
                        <group>
                            <field name="team_size" />
                            <field name="current_workload" />
                            <field name="available_from" />
                            <field name="max_project_duration" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" widget="html" />
                            </group>
                        </page>

                        <page string="Capacity &amp; Budget">
                            <group>
                                <group>
                                    <field name="budget_capacity_min" />
                                    <field name="budget_capacity_max" />
                                    <field name="currency_id" />
                                </group>
                                <group>
                                    <field name="completed_projects" />
                                    <field name="certifications" />
                                </group>
                            </group>
                            <group>
                                <field name="reference_projects" />
                                <field name="service_locations" />
                                <field name="preferred_project_types" />
                            </group>
                        </page>

                        <page string="Matching Requirements" invisible="state == 'draft'">
                            <field name="requirement_ids" widget="many2many_list" mode="tree,form" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_capacity_profile_search" model="ir.ui.view">
        <field name="name">vnfield.market.capacity.profile.search</field>
        <field name="model">vnfield.market.capacity.profile</field>
        <field name="arch" type="xml">
            <search>
                <field name="title" />
                <field name="contractor_id" />
                <field name="work_category" />

                <filter string="Waiting Match" name="waiting_match" domain="[('state', '=', 'waiting_match')]" />
                <filter string="Matched" name="matched" domain="[('state', '=', 'matched')]" />
                <filter string="Inactive" name="inactive" domain="[('state', '=', 'inactive')]" />

                <separator />
                <filter string="Available" name="available"
                    domain="[('current_workload', 'in', ['low', 'medium'])]" />
                <filter string="Busy" name="busy"
                    domain="[('current_workload', 'in', ['high', 'full'])]" />

                <separator />
                <filter string="My Profiles" name="my_profiles"
                    domain="[('contractor_id.user_ids', 'in', uid)]" />

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}" />
                    <filter string="Contractor" name="group_contractor"
                        context="{'group_by': 'contractor_id'}" />
                    <filter string="Category" name="group_category"
                        context="{'group_by': 'work_category'}" />
                    <filter string="Workload Level" name="group_workload"
                        context="{'group_by': 'current_workload'}" />
                </group>
            </search>
        </field>
    </record>

