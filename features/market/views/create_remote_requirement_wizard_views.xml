<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ðŸ§™â€â™‚ï¸ CREATE REMOTE REQUIREMENT WIZARD -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <record id="view_create_remote_requirement_wizard_form" model="ir.ui.view">
            <field name="name">vnfield.market.create.remote.requirement.wizard.form</field>
            <field name="model">vnfield.market.create.remote.requirement.wizard</field>
            <field name="arch" type="xml">
                <form string="Create New Remote Requirement">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="title" placeholder="Requirement Title..." required="1" />
                            </h1>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="task_id" readonly="1" />
                                <field name="work_category" />
                                <field name="location" />
                                <field name="remote_contractor_id" required="1" />
                            </group>
                            <group string="Requirements">
                                <field name="required_experience_years" />
                                <field name="required_team_size" />
                            </group>
                        </group>

                        <group>
                            <group string="Budget">
                                <field name="currency_id" />
                                <field name="budget_min" widget="monetary" />
                                <field name="budget_max" widget="monetary" />
                            </group>
                            <group string="Timeline">
                                <field name="project_start_date" />
                                <field name="project_end_date" />
                                <field name="project_duration" string="Duration (months)" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"
                                    placeholder="Enter detailed requirement description..." />
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button string="Create Requirement" name="action_create_requirement"
                            type="object" class="btn-primary" />
                        <button string="Cancel" name="action_cancel" type="object"
                            class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ðŸŽ¯ WIZARD ACTION -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <record id="action_create_remote_requirement_wizard" model="ir.actions.act_window">
            <field name="name">Create New Remote Requirement</field>
            <field name="res_model">vnfield.market.create.remote.requirement.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_create_remote_requirement_wizard_form" />
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>