<odoo>
    <data>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ðŸ§™â€â™‚ï¸ CREATE REMOTE CAPACITY PROFILE WIZARD -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <record id="view_create_remote_capacity_profile_wizard_form" model="ir.ui.view">
            <field name="name">vnfield.market.create.remote.capacity.profile.wizard.form</field>
            <field name="model">vnfield.market.create.remote.capacity.profile.wizard</field>
            <field name="arch" type="xml">
                <form string="Create New Remote Capacity Profile">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="title" placeholder="Capacity Profile Title..."
                                    required="1" />
                            </h1>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="work_category" />
                                <field name="remote_contractor_id" required="1" />
                            </group>
                            <group string="Capacity Details">
                                <field name="experience_years" />
                                <field name="team_size" />
                                <field name="current_workload" />
                            </group>
                        </group>

                        <group>
                            <group string="Budget Capacity">
                                <field name="currency_id" />
                                <field name="budget_capacity_min" widget="monetary" />
                                <field name="budget_capacity_max" widget="monetary" />
                            </group>
                            <group string="Availability">
                                <field name="available_from" />
                                <field name="max_project_duration" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"
                                    placeholder="Detailed description of capacity profile..." />
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button string="Create Profile" name="action_create_profile" type="object"
                            class="btn-primary" />
                        <button string="Cancel" name="action_cancel" type="object"
                            class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ðŸŽ¯ WIZARD ACTION -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <record id="action_create_remote_capacity_profile_wizard" model="ir.actions.act_window">
            <field name="name">Create New Remote Capacity Profile</field>
            <field name="res_model">vnfield.market.create.remote.capacity.profile.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>